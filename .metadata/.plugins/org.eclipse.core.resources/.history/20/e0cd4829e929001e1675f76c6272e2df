import org.hibernate.cfg.Configuration;
import org.hibernate.classic.Session;

import com.rays.dto.UserDTO;

public class TestHqlSqlQuery {

	public static void main(String[] args) {
		SessionFactory sf = new Configuration().configure().buildSessionFactory();

		Session session = sf.openSession();
		Transaction tx = session.beginTransaction();
		Query query = session.createSQLQuery("select*from USERDTO");

		List<UserDTO> list = query.list();
		Iterator it = list.iterator();

		
		while (it.hasNext()) {
	String s=(String) it.next();
	      

			/*
			 * System.out.println(dto.getId()); System.out.println(dto.getFirstName());
			 * System.out.println(dto.getLastName()); System.out.println(dto.getLoginId());
			 * System.out.println(dto.getPassword());
			 */
		}

		tx.commit();
		session.close();

	}

}
